        <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Index">Logout</a>
    </div>
    <h1>Welcome, Admin!</h1>
    <ul>
        <li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="ManageStudent"><button type="button" class="btn btn-info">Manage Students</button></a>
</li>
<li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Teacher" asp-action="ManageTeacher"><button type="button" class="btn btn-info">Manage Teachers</button></a>
</li>
<li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Course" asp-action="ManageCourse"><button type="button" class="btn btn-info">Manage Courses</button></a>
</li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Class" asp-action="ManageClass"><button type="button" class="btn btn-info">Manage Classes</button></a>
        </li>
