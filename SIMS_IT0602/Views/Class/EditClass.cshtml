@model Class
<style>
    input{
        margin-top: 10px;
    }
</style>
<body>
<h1 style="color:orange">Edit Class</h1>

@using (Html.BeginForm("Save", "Class", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { Class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { Class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Major, new { Class = "control-label" })
        @Html.TextBoxFor(m => m.Major, new { Class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Lecturer, new { Class = "control-label" })
            @Html.DropDownListFor(m => m.Lecturer, new SelectList(ViewBag.Teachers, "Name", "Name"), "Select Lecturer", new { @class = "form-control" })
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <input type="submit" value="Cancel" class="btn btn-warning" asp-area="" asp-controller="Class" asp-action="ManageClass" />

}
</body>


