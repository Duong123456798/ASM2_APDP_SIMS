@model Course
<h1 style="color:orange">New Course</h1>

@using (Html.BeginForm("CreateCourse", "Course", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Id, new { Class = "control-label" })
        @Html.TextBoxFor(m => m.Id, new { Class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { Class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { Class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Class, new { Class = "control-label" })
        @Html.DropDownListFor(m => m.Class, new SelectList(ViewBag.Classes, "Name", "Name"), "Select Class", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Major, new { Class = "control-label" })
        @Html.TextBoxFor(m => m.Major, new { Class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Lecturer, new { Class = "control-label" })
        @Html.DropDownListFor(m => m.Lecturer, new SelectList(ViewBag.Teachers, "Name", "Name"), "Select Teacher", new { @class = "form-control" })
    </div>
    <input type="submit" value="Create Course" class="btn btn-primary"/>
    <input type="submit" value="Cancel" class="btn btn-warning" asp-area="" asp-controller="Course" asp-action="ManageCourse" />

}


