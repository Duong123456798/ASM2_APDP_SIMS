@model IEnumerable<Course>
<h1>Hello Admin, Welcome to Course Homepage</h1>
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Class</td>
            <td>Major</td>
            <td>Lecturer</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Class</td>
                <td>@item.Major</td>
                <td>@item.Lecturer</td>
                <td>
                    <a class=" btn btn-outline-danger"
                       href="@Url.Action("Delete","Course",new {id=item.Id})">Delete</a>
                    <a class="btn btn-outline-warning"
                       href="@Url.Action("EditCourse","Course",new {id=item.Id})">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<ul>
    <li>
        <a class="btn btn-outline-success" asp-controller="Course" asp-action="CreateCourse">New Course</a>
    </li>
</ul>
<ul>
    <li> 
        <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="Index">Back to HomePage</a>
        </li>
    </ul>